<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Styles/Site.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Styles/colorbox.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Styles/jquery.cleditor.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Styles/fileuploader.css")" rel="Stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.history.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.colorbox-min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cleditor.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Site.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/fileuploader.js")" type="text/javascript"></script>
</head>

<body>
    @if (!User.Identity.IsAuthenticated)
    {
        <input id="login" type="button" value="Login" />
    }
    else
    {
        <input id="logout" type="button" value="Logout" />
    }
    <div id="frame">
        <div id="banner">
        </div>
        <div id="navigation">
            <table cellpadding="0" cellspacing="0" rules="none" border="0" style="border-color: #aaa; border-top: none; border-bottom: none;">
                <tr>
                    <td style="width: 5px;"></td>
                    <td class="divider"></td>
                    <td class="button">@Html.ActionLink("Home", "Index", "Home", null, new { @class="white" })</td>
                    <td class="divider"></td>
                    <td class="button">@Html.ActionLink("Services", "Index", "Services", null, new { @class = "white" })</td>
                    <td class="divider"></td>
                    <td class="button">@Html.ActionLink("Request Appointment", "Index", "ContactUs", null, new { @class = "white" })</td>
                    <td class="divider"></td>
                    <td class="button">@Html.ActionLink("Our Practice", "Index", "PracticeInfo", null, new { @class="white" })</td>
                    <td class="divider"></td>
                    <td class="button">@Html.ActionLink("Insurance Information", "Index", "InsuranceInfo", null, new { @class = "white" })</td>
                    <td class="divider"></td>
                    <td class="button">@Html.ActionLink("Office Forms", "Index", "OfficeForms", null, new { @class = "white" })</td>
                    <td class="divider"></td>
                </tr>
            </table>
        </div>
        <div id="mainContent">
            <div id="loadedContent">
                @RenderBody()
            </div>
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>
